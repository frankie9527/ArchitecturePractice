<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_head"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/img_head"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp_3"
            android:text="新闻标题新闻标题新闻标题新闻标题新闻标题新闻标题,不忘初心,方得始终.新闻标题新闻标题新闻标题新闻标题新闻标题新闻标题,不忘初心,方得始终.新闻标题新闻标题新闻标题新闻标题新闻标题新闻标题,不忘初心,方得始终.新闻标题新闻标题新闻标题新闻标题新闻标题新闻标题,不忘初心,方得始终.新闻标题新闻标题新闻标题新闻标题新闻标题新闻标题,不忘初心,方得始终.新闻标题新闻标题新闻标题新闻标题新闻标题新闻标题,不忘初心,方得始终."
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_alignBottom="@id/img_head"
            android:layout_alignLeft="@id/tv_title"
            android:text="凤凰新闻"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_replyCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_head"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:maxLines="1"
            android:text="12345评论"
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>